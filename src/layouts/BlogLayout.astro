---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
const published = new Date(frontmatter.publishDate);
---

<BaseLayout title={frontmatter.title}>
  <div class="flex flex-col gap-3 text-center">
    <img src={frontmatter.cover} class="max-h-64 object-cover rounded-2xl" />
    <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
    <p>Published on {published.toLocaleDateString()}</p>
  </div>
  <div class="prose dark:prose-invert mx-auto">
    <slot />
  </div>
  <div class="p-3">
    <p class="text-center">
      Tags:
      <span class="font-medium">{frontmatter.tags.join(", ")}</span>
    </p>
  </div>
</BaseLayout>
