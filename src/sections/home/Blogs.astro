---
import Heading from "@/components/Heading.astro";
import { getCollection } from "astro:content";
import BlogCard from "../blogs/BlogCard.astro";

const allBlogPosts = await getCollection("blog");
---

<section class="flex flex-col gap-8 items-center">
  <div class="flex flex-col gap-2">
    <Heading>Blogs</Heading>
    <h2 class="text-center text-5xl tracking-tight font-bold">
      Sometimes I do write things
    </h2>
    <h3 class="text-center text-2xl">
      (pun intended). Anyway, these are how I document my projects, or anything
      that's been going on in a while.
    </h3>
  </div>

  <div class="flex flex-col gap-4 w-full">
    {allBlogPosts.map((post) => <BlogCard blogPost={post} />)}
  </div>
</section>
